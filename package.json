{
  "name": "suzao-monorepo",
  "private": true,
  "scripts": {
    "dev:ui": "pnpm --filter @suzao/ui dev",
    "dev:utils": "pnpm --filter @suzao/utils dev",
    "dev:frontend": "pnpm --filter suzao-frontend dev",
    "dev": "concurrently -n UI,Utils,Frontend -c blue,magenta,green \"pnpm run dev:ui\" \"pnpm run dev:utils\" \"pnpm run dev:frontend\"",
    "build:ui": "pnpm --filter @suzao/ui build",
    "build:utils": "pnpm --filter @suzao/utils build",
    "build:frontend": "pnpm --filter suzao-frontend build",
    "build": "pnpm run build:ui && pnpm run build:utils && pnpm run build:frontend -- --dotenv .env",
    "build:prod": "pnpm run build:ui && pnpm run build:utils && pnpm run build:frontend -- --dotenv .env.production"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.14.0",
    "pnpm": "^8.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.6.2",
    "vite": "^7.1.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "pnpm@8.5.0+sha1.83c41fe4ebdb61e08446f8bb68a75fb48756b330"
}