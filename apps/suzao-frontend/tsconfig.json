{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "types": [
      "node",
      "@types/node"
    ],
    "baseUrl": ".",
    "paths": {
      "#app": [
        ".nuxt/imports.d.ts"
      ],
      "#imports": [
        ".nuxt/imports.d.ts"
      ],
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "@suzao/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@suzao/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@suzao/utils": [
        "../../packages/utils/src/index.ts"
      ],
      "@suzao/utils/*": [
        "../../packages/utils/src/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.vue",
    ".nuxt/**/*.ts",
    "nuxt.config.ts",
    "composables/**/*.{ts,js}",
    "plugins/**/*.{ts,js}",
    "types/**/*.d.ts",
    "../../packages/ui/src/**/*.ts",
    "../../packages/ui/src/**/*.vue",
    "../../packages/utils/src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".nuxt"
  ]
}